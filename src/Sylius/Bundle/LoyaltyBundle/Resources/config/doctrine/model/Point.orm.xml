<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Loyalty\Model\Point" table="sylius_loyalty_point">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="amount" column="amount" type="integer" />

        <field name="originId" column="origin_id" type="int" nullable="true" />
        <field name="originType" column="origin_type" type="string" nullable="true" />

        <many-to-one field="award" target-entity="Sylius\Component\Loyalty\Model\AwardInterface">
            <join-column name="award_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
