<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Loyalty\Model\Award" table="sylius_loyalty_award">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code" type="string" unique="true" />
        <field name="minAmount" column="min_amount" type="integer" nullable="true" />
        <field name="maxAmount" column="max_amount" type="integer" nullable="true" />
        <field name="amount" column="amount" type="integer" />
        <field name="reward" column="reward" type="integer" />

        <many-to-one field="level" target-entity="Sylius\Component\Loyalty\Model\LevelInterface" inversed-by="awards">
            <join-column name="level_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
