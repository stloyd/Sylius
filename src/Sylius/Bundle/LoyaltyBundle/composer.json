{
    "name": "sylius/loyalty-bundle",
    "type": "symfony-bundle",
    "description": "Manage ecommerce loyalty system in your Symfony application.",
    "keywords": ["loyalty"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Jędrzejewski",
            "homepage": "http://pjedrzejewski.com"
        },
        {
            "name": "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.5.9|^7.0",

        "sylius/loyalty": "^0.19",
        "sylius/resource-bundle": "^0.18",
        "symfony/framework-bundle": "^2.7.7",
        "a2lix/translation-form-bundle": "~2.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4",
        "twig/twig": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Sylius\\Bundle\\LoyaltyBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Sylius\\Bundle\\LoyaltyBundle\\spec\\": "spec/" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.19-dev"
        }
    }
}
