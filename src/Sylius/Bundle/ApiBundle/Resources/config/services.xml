<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sylius.oauth_server.client_manager.class">Sylius\Bundle\ApiBundle\Model\ClientManager</parameter>
    </parameters>

    <services>
        <service id="sylius.oauth_server.client_manager" class="%sylius.oauth_server.client_manager.class%">
            <argument type="service" id="fos_oauth_server.entity_manager" />
            <argument>%fos_oauth_server.model.client.class%</argument>
        </service>

        <service id="sylius.security.api_key_authenticator" class="Sylius\Bundle\ApiBundle\Security\ApiKeyAuthenticator">
            <argument type="service" id="sylius.user_provider.api_key" />
        </service>

        <service id="sylius.user_provider.api_key" class="Sylius\Bundle\ApiBundle\Security\ApiKeyUserProvider">
            <argument type="service" id="sylius.repository.user" />
        </service>
    </services>

</container>
